<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_current"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/offline_notice_backgroud"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="当前城市"
        android:textColor="@color/offline_notice_font"
        android:textSize="@dimen/text_size_32" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" >

        <TextView
            android:id="@+id/tv_current_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="#0a0a0a"
            android:textSize="@dimen/text_size_32" />

        <TextView
            android:id="@+id/tv_current_city_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_current_city"
            android:text=""
            android:textColor="@color/offline_notice_font"
            android:textSize="@dimen/text_size_32" />

        <com.meizhiyun.mayi.view.MyView
            android:id="@+id/tv_down"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/download_btn_click"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="下载"
            android:textColor="@color/title_bar"
            android:textSize="@dimen/text_size_28" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_all_cities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/offline_notice_backgroud"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="所有城市"
        android:textColor="@color/offline_notice_font"
        android:textSize="@dimen/text_size_32" />

</LinearLayout>