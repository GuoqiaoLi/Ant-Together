<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/ll_teammates_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/delete_selector"
            android:layout_marginLeft="12dp" 
            android:visibility="gone"/>

        <com.meizhiyun.mayi.utils.CircleImageView
            android:id="@+id/civ_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/user"
            />
        
        <TextView 
            android:id="@+id/tv_nickname_list"
            android:layout_width="0dp" 
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_32"
            android:text=""
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:singleLine="true"
            android:ellipsize="end"
            />
        
        <ImageView 
            android:id="@+id/iv_qun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/quntubiao"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="4dp"
            android:visibility="invisible"
            />
        
    </LinearLayout>

</LinearLayout>