<?xml version="1.0" encoding="utf-8"?>
<!-- 按钮的背景选择器，并且有圆角样式 -->
<selector  xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item android:state_pressed="true">
        <shape >
            <corners android:radius="10dp"/>
            <gradient android:startColor="@color/click"
                android:endColor="@color/click"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape >
            <corners android:radius="10dp"/>
            <gradient android:startColor="@color/click"
                android:endColor="@color/click"/>
        </shape>
    </item>
    <item>
        <shape >
            <corners android:radius="10dp"/>
            <gradient android:startColor="@color/title_bar"
                android:endColor="@color/title_bar"/>
        </shape>
    </item>

</selector>
